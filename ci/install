#!/bin/bash

UBUNTU_DEPS="cmake gcc g++ clang make libsctp-dev"
FEDORA_DEPS="cmake gcc gcc-c++ clang make lksctp-tools-devel"


# ###### Linux ##############################################################
if [ "$TRAVIS_OS_NAME" = "linux" ] ; then
   # ====== Ubuntu Linux ====================================================
   if [ "$VARIANT" = "ubuntu" ] ; then
      sudo docker exec -t ubuntu-test bash -c "apt-get update"
      sudo docker exec -t ubuntu-test bash -c "apt-get install -y ${UBUNTU_DEPS}"
      if [ "$TOOL" = "pbuilder" ] ; then
         sudo docker exec -t ubuntu-test bash -c "apt-get install -y pbuilder
         sudo cat >/etc/pbuilderrc <<EOF
DISTRIBUTION=$DISTRIBUTION
COMPONENTS="main universe"
MIRRORSITE=http://us.archive.ubuntu.com/ubuntu/
APTCACHEHARDLINK=no
EOF
         sudo docker exec -t ubuntu-test bash -c "cat /etc/pbuilderrc"
         sudo docker exec -t ubuntu-test bash -c "pbuilder create --debootstrapopts --variant=buildd
         sudo docker exec -t ubuntu-test bash -c "pbuilder login --save-after-login <<EOF
apt install -y software-properties-common
apt-add-repository -sy ppa:dreibh/ppa
apt-get update
EOF
"
         sudo docker exec -t ubuntu-test bash -c "sed -e 's/SKIP_PACKAGE_SIGNING=1/SKIP_PACKAGE_SIGNING=0/g' -i debian.conf"
      fi

   # ======Fedora Core Linux ================================================
   elif [ "$VARIANT" = "fedora" ] ; then
      sudo docker exec -t ubuntu-test bash -c "dnf install -y ${FEDORA_DEPS}"
      if [ "$TOOL" = "mock" ] ; then
         sudo docker exec -t ubuntu-test bash -c "dnf install -y mock"
      fi
   fi

# ###### Other ##############################################################
elif [ "$TRAVIS_OS_NAME" = "osx" ] ; then
   echo "TBD"

# ###### Error ##############################################################
else
   echo >&2 "ERROR: Invalid setting of TRAVIS_OS_NAME=$TRAVIS_OS_NAME"
   exit 1
fi
